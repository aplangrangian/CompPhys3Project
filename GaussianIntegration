#Imports
import numpy as np


#Functions
def func(k,q):
    func=k*np.exp(-q**2)
    return func

def weight_func(Mesh_Size):
    x = np.polynomial.legendre.leggauss(Mesh_Size)
    return x 

def GaussInteg(x,N,q0,K,k):
    sum=0
    for j in range(0,N):
        q=q0*(1+x[j])/(1-x[j])
        sum+= K[j]*func(k,q)
        print(sum)
    return sum

#Variables
Mesh_Size = 40
N=40
k=1
F=np.zeros((N,1))
q0=1

#Body of Code    
Mesh_asbsesca = weight_func(Mesh_Size)[0]
Mesh_weights = weight_func(Mesh_Size)[1]

F=GaussInteg(Mesh_asbsesca,N,q0,Mesh_weights,k)
